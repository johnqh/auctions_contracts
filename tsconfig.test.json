{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/test",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node10",
    "ignoreDeprecations": "5.0",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "test/unified/**/*",
    "src/**/*",
    "typechain-types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test/evm/**/*"
  ]
}
